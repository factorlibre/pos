<templates id="template" xml:space="preserve">

    <t
        t-name="OrderReceiptRedeemPaymentInherit"
        t-inherit="point_of_sale.OrderReceipt"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//div[@id='payment_summary']/span[1]" position="inside">
            <span class="payment-code" t-if="line.code"><t
                    t-out="' [' + line.code + ']'"
                /></span>
        </xpath>
    </t>

</templates>
